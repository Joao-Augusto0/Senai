package modelo;

import java.util.Scanner;

public class Ex10 {
public static Scanner leia;
	public static void main(String[] args) {
	
		leia = new Scanner(System.in);
		
		float at,q,reais;
		
		System.out.print("Digite o valor da area:");
		at = leia.nextFloat();
		
		
		q = (float) ((3.7 /10) * at);
		reais = (130/10) * q;
				
		System.out.printf("a quantidade de quilos que vc vai precisar é: %2.f",q);
		System.out.printf("e isso tudo vai custar: %2.f",reais);
	}
}
package modelo;

public class Alunos {

	private String nome;
	private float n1;
	private float n2;
	private float n3;
	
	public Alunos(String entrada) {
		nome = (entrada.split(";")[0]);
		n1 = Float.parseFloat(entrada.split(";")[1]);
		n2 = Float.parseFloat(entrada.split(";")[2]);
		n3 = Float.parseFloat(entrada.split(";")[3]);
	}
	
	public String toString() {
	float media =  n1 + n2 + n3/3 ;
		return nome + ";" + media;
	}
}
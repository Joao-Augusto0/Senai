		try {
			FileReader fr = new FileReader("base.txt");
			BufferedReader br = new BufferedReader(fr);
			
			String linha = "";
		
			while( (linha = br.readLine()) != null) {
				System.out.println(linha);
			}
		
		br.close();
		fr.close();
		
	}catch (FileNotFoundException e) {
		System.out.println(e.toString());
	}catch (IOException e) {
		System.out.println(e.toString());
	}
		
	}
}
package solucao;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.ArrayList;

public class Principal {
	
	int opcao = 0;
	do {
		System.out.println("1-soma!");
		System.out.println("2-mult!");
		System.out.println("3-subtração");
		System.out.println("4-divi!");
		System.out.println("5-sair");
		opcao = leia.nextInt();
	
	//espaço de entrada 
	static BufferedReader br;
	
	//endereço do arquivo
	
	static String entrada =  "C:\\Users\\DESENVOLVIMENTO\\Desktop\\atividade java\\solucao\\entrada.csv";
	static ArrayList<Integer> aux = new ArrayList<>();
	static int aux1 = 0;
	static int aux2 = 0;

	public static void main(String[] args) {
		
		//abre o arquivo tratando os possiveis erros
		
		try {
			
			//abre o arquivo
			
		br = new BufferedReader(new FileReader(entrada));
		String linha = br.readLine();
		
		while(linha != null) {
			String[] temp = linha.split(";");
			System.out.println(linha);
			linha = br.readLine();
			
			aux1 = Integer.parseInt(temp[0]);
			aux2 = Integer.parseInt(temp[1]);
			int soma = aux1 + aux2;
			
			System.out.println(soma);
		}
		
		//fecha o arquivo
		
		br.close();
		}catch(FileNotFoundException e) {
			e.printStackTrace();
		}catch(IOException e) {
			e.printStackTrace();
		}
		
	}

}

package solucao;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.Scanner;

public class Principal {
	
	Scanner leia = new Scanner(System.in);
	
	//espaço de entrada 
	static BufferedReader br;
	
	//endereço do arquivo
	
	static String entrada =  "C:\\Users\\DESENVOLVIMENTO\\Desktop\\atividade java\\solucao\\entrada.csv";

	public static void main(String[] args) {
		int menu = 0;
		int opcao = 0;
		
	
		
		do {
			System.out.println("1-soma!");
			System.out.println("2-mult!");
			System.out.println("3-subtração");
			System.out.println("4-divi!");
			System.out.println("5-sair");
			
			opcao = leia.nextInt();
			
			switch(menu) {
			case 1:
				opcao = 1;
			
			break;
			
			case 2:
				
						
			case 3:
				
				break;
				
			case 4:	
				
			default:
				System.out.println("ain");
				break;
		}
		
	}while(menu != 0);
		
		//abre o arquivo tratando os possiveis erros
		
		try {
			
			//abre o arquivo
			
		br = new BufferedReader(new FileReader(entrada));
		String linha = br.readLine();
		
		while(linha != null) {
			String[] cep = linha.split(";");
			int v1 = Integer.parseInt(cep[0]);
			int v2 = Integer.parseInt(cep[1]);
			int soma = v1 + v2;
			System.out.println(soma);
			linha = br.readLine();
			
		}
		
		//fecha o arquivo
		br.close();
		}catch(FileNotFoundException e) {
			e.printStackTrace();
		}catch(IOException e) {
			e.printStackTrace();
		}
		
	}

}
